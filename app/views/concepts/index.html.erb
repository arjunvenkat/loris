<p id="notice"><%= notice %></p>

<h1>Listing Concepts</h1>

<table>
  <thead>
    <tr>
      <th>Roadmap</th>
      <th>Topic</th>
      <th>Position</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @concepts.each do |concept| %>
      <tr>
        <td><%= concept.roadmap_id %></td>
        <td><%= concept.topic_id %></td>
        <td><%= concept.position %></td>
        <td><%= concept.title %></td>
        <td><%= concept.content %></td>
        <td><%= link_to 'Show', concept %></td>
        <td><%= link_to 'Edit', edit_concept_path(concept) %></td>
        <td><%= link_to 'Destroy', concept, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

