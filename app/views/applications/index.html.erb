<p id="notice"><%= notice %></p>

<h1>Listing Applications</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Section</th>
      <th>Student first name</th>
      <th>Student last name</th>
      <th>Student email</th>
      <th>Parent name</th>
      <th>Parent email</th>
      <th>Phone</th>
      <th>Reference</th>
      <th>Experience</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @applications.each do |application| %>
      <tr>
        <td><%= application.course %></td>
        <td><%= application.section %></td>
        <td><%= application.student_first_name %></td>
        <td><%= application.student_last_name %></td>
        <td><%= application.student_email %></td>
        <td><%= application.parent_name %></td>
        <td><%= application.parent_email %></td>
        <td><%= application.phone %></td>
        <td><%= application.reference %></td>
        <td><%= application.experience %></td>
        <td><%= link_to 'Show', application %></td>
        <td><%= link_to 'Edit', edit_application_path(application) %></td>
        <td><%= link_to 'Destroy', application, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

