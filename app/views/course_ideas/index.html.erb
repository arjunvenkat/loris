<p id="notice"><%= notice %></p>

<h1>Listing Course Ideas</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_ideas.each do |course_idea| %>
      <tr>
        <td><%= course_idea.email %></td>
        <td><%= course_idea.content %></td>
        <td><%= link_to 'Show', course_idea %></td>
        <td><%= link_to 'Edit', edit_course_idea_path(course_idea) %></td>
        <td><%= link_to 'Destroy', course_idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course idea', new_course_idea_path %>
