<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1>Apply for a course</h1>
      <%= form_for(@application) do |f| %>
        <h3>1. Choose a course</h3>
        <div class="form-group">
          <%= f.label :course, class: 'sr-only' %>
          <%= f.select :course, options_for_select([
                ['Website design', 'website design'],
                ['Web app development - Phase 1', 'web app development - phase 1']
              ], @application.course), {}, {class: 'form-control'} %>
        </div>
        <h3>2. Choose a day and time</h3>
        <div class="form-group">
          <%= f.label :section, class: 'sr-only' %>
          <%= f.select :section, options_for_select([
                ['Tuesdays at 4pm, starting on June 16th, 2015', '16-6-2015 16:00 -0500'],
                ['Tuesdays at 5pm, starting on June 16th, 2015', '16-6-2015 17:00 -0500']
              ], @application.section), {}, {class: 'form-control'} %>
        </div>
        <h3>3. Fill out the following form</h3>
        <p>If you're a parent applying for your child, please also include your contact info</p>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :student_first_name, 'Student first name' %>
              <%= f.text_field :student_first_name, class: 'form-control', placeholder: 'Alan' %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :student_last_name, 'Student last name' %>
              <%= f.text_field :student_last_name, class: 'form-control', placeholder: 'Turing' %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :student_email, 'Student email' %>
              <%= f.email_field :student_email, class: 'form-control', placeholder: 'alan@example.com' %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :parent_name, 'Parent name (optional)' %>
              <%= f.text_field :parent_name, class: 'form-control', placeholder: 'Julius Turing' %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :parent_email, 'Parent email (optional)' %>
              <%= f.text_field :parent_email, class: 'form-control', placeholder: 'julius@example.com' %>
            </div>
          </div>
        </div>
        <!-- <div class="form-group">
          <%= f.label :phone, 'Phone number' %>
          <%= f.text_field :phone, class: 'form-control' %>
        </div> -->
        <div class="form-group">
          <%= f.label :reference, 'How did you find out about us?' %>
          <%= f.text_field :reference, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :experience, 'Do you already have some coding experience? If so, explain below.' %>
          <%= f.text_area :experience, class: 'form-control', rows: 4 %>
        </div>
        <div class="form-group">
          <button type='submit' class='btn btn-default'>Submit your application</button>
        </div>
      <% end %>
    </div>
  </div>
</div>


<script>
  var $courseDropdown = $('select#application_course')
  var $sectionDropdown = $('select#application_section')

  $courseDropdown.change(function(){
    var selectedCourse = $courseDropdown.val();
    console.log(selectedCourse);
    if (selectedCourse == 'web app development - phase 1') {
    $sectionDropdown.html('<option value="18-6-2015 16:00 -0500">Thursdays at 4pm, starting on June 18th, 2015 </option><option value="18-6-2015 17:00 -0500">Thursdays at 5pm, starting on June 18th, 2015</option>')
    } else {
      $sectionDropdown.html('<option value="16-6-2015 16:00 -0500">Tuesdays at 4pm, starting on June 16th, 2015 </option><option value="16-6-2015 17:00 -0500">Tuesdays at 5pm, starting on June 16th, 2015</option>')
    }
  });
</script>
