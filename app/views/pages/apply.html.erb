<div class="container apply">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1>Apply for a course</h1>
      <%= form_for(@application) do |f| %>
        <% if @application.errors.any? %>
          <% @application.errors.full_messages.each do |message| %>
            <div class="alert alert-dismissable alert-warning">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
              <%= message %>
            </div>
          <% end %>
        <% end %>
        <h4>1. Choose a course</h4>
        <div class="form-group">
          <%= f.label :course, class: 'sr-only' %>
          <div class="row">
            <div class="col-md-6">
              <%= f.select :course, options_for_select([
                  ['Website design - Phase 1', 'website design - phase 1'],
                  ['Web app development - Phase 1', 'web app development - phase 1'],
                  ['Game development - Phase 1', 'game development - phase 1']
                ], @application.course), {}, {class: 'form-control'} %>
            </div>
          </div>
        </div>
        <h4>2. Choose a day and time</h4>
        <div class="form-group">
          <%= f.label :section, class: 'sr-only' %>
          <div class="row">
            <div class="col-md-7">
              <%= f.select :section, options_for_select([
                    ['Wednesdays at 3pm, starting on August 5th, 2015', '8-1-2015 15:00 -0500']
                  ], @application.section), {}, {class: 'form-control'} %>
            </div>
          </div>
        </div>
        <h4>3. Fill out the following form</h4>
        <p>If you're a parent applying for your child, please also include your contact info</p>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :student_first_name, 'Student first name' %>
              <%= f.text_field :student_first_name, class: 'form-control', placeholder: 'Alan' %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :student_last_name, 'Student last name' %>
              <%= f.text_field :student_last_name, class: 'form-control', placeholder: 'Turing' %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :student_email, 'Student email' %>
              <%= f.email_field :student_email, class: 'form-control', placeholder: 'alan@example.com' %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :parent_name, 'Parent name (optional)' %>
              <%= f.text_field :parent_name, class: 'form-control', placeholder: 'Julius Turing' %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :parent_email, 'Parent email (optional)' %>
              <%= f.email_field :parent_email, class: 'form-control', placeholder: 'julius@example.com' %>
            </div>
          </div>
        </div>
        <!-- <div class="form-group">
          <%= f.label :phone, 'Phone number' %>
          <%= f.text_field :phone, class: 'form-control' %>
        </div> -->
        <div class="form-group">
          <%= f.label :reference, 'How did you find out about us?' %>
          <%= f.text_field :reference, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :experience, 'Do you already have some coding experience? If so, explain below.' %>
          <%= f.text_area :experience, class: 'form-control', rows: 4 %>
        </div>
        <div class="form-group">
          <button type='submit' class='btn btn-default'>Submit your application</button>
        </div>
      <% end %>
    </div>
  </div>
</div>


<script>
  var $courseDropdown = $('select#application_course')
  var $sectionDropdown = $('select#application_section')

  $courseDropdown.change(function(){
    var selectedCourse = $courseDropdown.val();
    console.log(selectedCourse);
    if (selectedCourse == 'web app development - phase 1') {
    $sectionDropdown.html('<option value="8-5-2015 16:00 -0500">Wednesdays at 4pm, starting on August 5th, 2015 </option>')
    } else if (selectedCourse == 'game development - phase 1'){
      $sectionDropdown.html('<option value="8-5-2015 17:00 -0500">Wednesdays at 5pm, starting on August 5th, 2015 </option>')
    } else if (selectedCourse == 'website design - phase 1') {
      $sectionDropdown.html('<option value="8-5-2015 15:00 -0500">Wednesdays at 3pm, starting on August 5th, 2015 </option>')

    }
  });
</script>
