/* Colors */

$primary-color: #4caf50;
$spacer-size: 16px;


/* Global */
html, body {
  height: 100%;
}


h1 {
  font-size: 3.2em;
  margin-bottom: 0.5em;
  border-bottom: 1px solid #ddd;
  padding-bottom: 0.3em;
}

h2 {
  font-size: 2.3em;
}

h3 {
  font-size: 2em;
}

h4 {
  font-size: 1.6em;
}

body {
  padding-top: 66px;
}
.spacer {
  padding-top: $spacer-size;
}

.spacer-2 {
  padding-top: 2 * $spacer-size;
}

.spacer-4 {
  padding-top: 4 * $spacer-size
}

.spacer-7 {
  padding-top: 7 * $spacer-size
}

.spacer-10 {
  padding-top: 10 * $spacer-size
}

.invisible {
  opacity: 0;
}

a.thumbnail:hover, a.thumbnail:focus, a.thumbnail.active {
  border-color: $primary-color;
}

/* Nav */

.navbar {
  // -webkit-box-shadow: none;
  // box-shadow: none;
  .container-fluid {
    width: 1170px;
  }
}

.impt-copy p {
  line-height: 1.6;
  font-size: 1.4em;
}

.internal-links {
  padding-left: 0;
  list-style-type: none;
  font-size: 1.4em;
  line-height: 1.4;
  li {
    padding-bottom: 0.4em;
  }
}

/* Home */
.home-bg {
  background-image: url("<%= asset_url('computer_boy.jpg') %>");
  background-repeat: no-repeat;
  background-size: cover;
  height: 100%;
}

.home-header {
  background-color: rgba(0,0,0,0.5);
  min-height: 100%;

  .form-control {
    color: white;
  }
  h1 {
    padding-top: 66%;
    font-size: 2.6em;
    margin-top: 0;
    border-bottom: none;
    color: white;
  }
}

.btn-home {
  margin-top: 1em;
}

.home-subheading {
  text-align: center;
}

h4.home-subheading {
  color: gray;
}

.jumbotron {
  background-color: #FFF;

  .main-heading {
    color: $primary-color;
    font-size: 2.6em;
  }

  h1 {
    border: none;
  }

}

.program-skills {
  margin-top: 6em;

  .fa {
    font-size: 4em;
    margin-right: 24px;
  }
  .fa-lightbulb-o {
    padding-right: 0.25em;
    padding-left: 0.25em;
  }
}

.form-inline .form-control {
  width: 300px;
}

textarea:focus, textarea.form-control:focus, input.form-control:focus, input[type=text]:focus, input[type=password]:focus, input[type=email]:focus, input[type=number]:focus, [type=text].form-control:focus, [type=password].form-control:focus, [type=email].form-control:focus, [type=tel].form-control:focus, [contenteditable].form-control:focus {
  -webkit-box-shadow: inset 0 -2px 0 $primary-color;
  box-shadow: inset 0 -2px 0 $primary-color;
}

select:focus, select.form-control:focus {
  -webkit-box-shadow: inset 0 -2px 0 $primary-color;
  box-shadow: inset 0 -2px 0 $primary-color;
}

.course-img {
  height: 100px;
}




/* Class page */
.panel-box {
  position: relative;
  div {
    width: 70%;
  }
}

.panel-body hr {
  margin-top: 1em;
  margin-bottom: 1.4em;
}

.class-list-btn {
  position: relative;
  bottom: 3px;
  left: 0px;
  margin-top: 1em;
}

.skill-list {
  padding-left: 0;
  li {
    list-style-type: none;
  }
}

.cost {
  color: $primary-color;
  font-size: 4em;
  line-height: 1;
}


/* Forms */

textarea, textarea.form-control {
  box-shadow: none;
  border: 1px solid lightgray;
  border-radius: 0.25em;
  padding: 0.4em;
}

textarea:focus, textarea.form-control:focus {
  -webkit-box-shadow: none;
  box-shadow: none;
  border-color: $primary-color;
}


/* Footer */

footer {
  padding-top: 2em;
  padding-bottom: 3em;
  text-align: center;
}

/* About */

.about-image {
  padding-bottom: 1em;
  margin: 0 auto;
}

/* Our program */
.our-program h3 {
  margin-top: -60px;
  padding: 70px 0 0 0;/*add approx 1.1em in px for top padding here*/
}


/* Pricing */
.pricing {
  padding-top: 2em;
  .price {
    color: $primary-color;
    font-size: 10em;
    text-align: center;
    line-height: 0.8em;
    .currency {
      font-size: .8em;
      vertical-align: middle;
    }
  }
  .timeframe {
    font-size: 2em;
    text-align: center;
  }

  .features {


    p {
      font-size: 2em;
      margin-bottom: 0.5em;
    }

    ul {
      font-size: 1.6em;
      padding-left: 1em;
      // list-style-type: none;
    }

    li {
      line-height: 1.6em;
    }

    .footnote {
      font-size: 1em;
    }
  }
}

/* Apply */
.apply {
  h4 {
    color: $primary-color;
  }
}


/* Bootstrap Overrides*/
.alert {
  margin-bottom: 0;
  border-radius: 0;
}

@media (min-width: 320px) {

  .home-header {
    h1 {
      padding-top: 35%;
    }
  }

}

@media (min-width: 365px) {

  .home-header {
    h1 {
      padding-top: 60%;
    }
  }

}



@media (min-width: 480px) {

  .home-header {
    h1 {
      padding-top: 40%;
    }
  }

}

@media (min-width: 768px) {
  .class-list-btn {
    position: absolute;
    left: auto;
    bottom: 3px;
    right: 3px;
  }

  .home-header {
    h1 {
      padding-top: 40%;
      font-size: 4em;
    }
  }

}

@media (min-width: 1080px) {
  .home-header {
    h1 {
      padding-top: 30%;
      font-size: 4em;
    }
  }

  .btn-home {
    margin-top: 0;
  }

}

@media (min-width: 1600px) {
  .class-list-btn {
    position: absolute;
    left: auto;
    bottom: 3px;
    right: 3px;
  }

  .home-header {
    h1 {
      padding-top: 44%;
      font-size: 6em;
    }
  }

}
